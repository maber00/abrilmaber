      <div class="w-full md:w-800 h-0.8 mb-8 mx-auto"></div>
      <div class="grid grid-cols-1 sm:grid-cols-1 md:grid-cols-1 gap-4 md:gap-6 px-0 md:px-[50px] lg:px-[100px] mb-16">
