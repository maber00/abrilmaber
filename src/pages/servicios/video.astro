---
import Layout from "@layouts/Layout.astro";
import { Image } from 'astro:assets';

// Importa imágenes para cada servicio
// Reemplaza estas rutas con las rutas reales a tus imágenes
import videoCorporativo from '../../assets/servicios/comerciales-gourmet.webp';
import lanzamientoProducto from '../../assets/servicios/comerciales-gourmet.webp';
import videoMarketing from '../../assets/servicios/comerciales-gourmet.webp';
import videoAnimado from '../../assets/servicios/comerciales-gourmet.webp';
import tomasAereas from '../../assets/servicios/comerciales-gourmet.webp';
import capacitacion from '../../assets/servicios/comerciales-gourmet.webp';
import detrasCamaras from '../../assets/servicios/comerciales-gourmet.webp';
import himnos from '../../assets/servicios/comerciales-gourmet.webp';
import video360 from '../../assets/servicios/comerciales-gourmet.webp';
import responsabilidadSocial from '../../assets/servicios/comerciales-gourmet.webp';

// Define metadatos para SEO
const pageTitle = "Producción de Video | RENDER";
const pageDescription = "Servicios completos de producción de video. Videos corporativos, marketing, animación, capacitación y más con tecnología de inteligencia artificial.";

// Definir los servicios de producción de video
const servicios = [
  {
    titulo: "Corporativo o Institucional",
    descripcion: "Fortalece tu marca empleadora, impulsa el orgullo interno y conecta con tus clientes con videos que transmiten la esencia de tu empresa. Creamos presentaciones institucionales y mensajes de liderazgo que atraen talento, motivan equipos y generan confianza en clientes.",
    imagen: videoCorporativo,
    url: "/servicios/video/corporativo"
  },
  {
    titulo: "Lanzamiento de Producto",
    descripcion: "Genera expectación y maximiza el impacto de tus nuevos productos o servicios con videos de lanzamiento que capturan la atención y despiertan el interés. Utilizamos el storytelling y la IA para crear videos que conectan con tu audiencia y generan resultados.",
    imagen: lanzamientoProducto,
    url: "/servicios/video/lanzamiento-producto"
  },
  {
    titulo: "Video Marketing",
    descripcion: "Atrae, convierte y fideliza a tus clientes con videos que impulsan tu estrategia de marketing. Creamos contenido atractivo y relevante que conecta con tu público objetivo y genera resultados medibles para tus campañas.",
    imagen: videoMarketing,
    url: "/servicios/video/marketing"
  },
  {
    titulo: "Video Animado / Motion Graphics",
    descripcion: "Explica conceptos complejos de forma clara y atractiva con videos animados que cautivan a tu audiencia. Creamos animaciones personalizadas que transmiten tu mensaje de forma creativa y efectiva.",
    imagen: videoAnimado,
    url: "/servicios/video/animacion"
  },
  {
    titulo: "Tomas Aéreas",
    descripcion: "Captura imágenes espectaculares desde perspectivas únicas con tomas aéreas que destacan la belleza y la magnitud de tus proyectos e instalaciones, añadiendo un valor visual incomparable a tus videos.",
    imagen: tomasAereas,
    url: "/servicios/video/tomas-aereas"
  },
  {
    titulo: "Capacitación",
    descripcion: "Mejora el aprendizaje y la retención de información con videos de capacitación dinámicos y efectivos. Nuestra tecnología de IA nos permite crear contenido personalizado que se adapta a las necesidades de tu equipo.",
    imagen: capacitacion,
    url: "/servicios/video/capacitacion"
  },
  {
    titulo: "Detrás de Cámaras",
    descripcion: "Muestra el lado humano de tu empresa y genera confianza con videos que revelan el proceso creativo detrás de tus proyectos, conectando con tu audiencia a un nivel más personal y auténtico.",
    imagen: detrasCamaras,
    url: "/servicios/video/detras-camaras"
  },
  {
    titulo: "Himnos / Videoclip",
    descripcion: "Celebra tus logros y fortalece el espíritu de equipo con himnos y videoclips que transmiten emoción y orgullo, creando un sentido de pertenencia y unidad en tu organización.",
    imagen: himnos,
    url: "/servicios/video/himnos"
  },
  {
    titulo: "Video 360",
    descripcion: "Ofrece una experiencia inmersiva a tu audiencia con videos 360 que permiten explorar tus productos, instalaciones o servicios desde todos los ángulos, generando una conexión más profunda y memorable.",
    imagen: video360,
    url: "/servicios/video/video-360"
  },
  {
    titulo: "Responsabilidad Social",
    descripcion: "Comunica tus iniciativas de responsabilidad social de forma transparente y auténtica con videos que generan conciencia y compromiso, destacando el impacto positivo de tu empresa en la sociedad.",
    imagen: responsabilidadSocial,
    url: "/servicios/video/responsabilidad-social"
  }
];
---

<Layout title={pageTitle}>
  <div class="min-h-screen bg-white">
    <!-- Hero Section -->
    <section class="relative py-20 md:py-32 bg-black text-white">
      <div class="container mx-auto px-4 md:px-[100px]">
        <div class="max-w-4xl">
          <h1 class="text-5xl md:text-7xl font-serif font-normal mb-4 leading-tight">Producción de Video</h1>
          <div class="w-full md:w-[600px] h-0.5 bg-[#B1293E] mb-8" id="underline"></div>
          <p class="text-xl md:text-2xl mb-8">Creamos contenido audiovisual impactante que conecta emocionalmente con tu audiencia, transmitiendo tus mensajes de forma clara, creativa y efectiva.</p>
        </div>
      </div>
    </section>

    <!-- Servicios Grid -->
    <section class="pb-16 bg-black">
      <div class="container mx-auto px-4 md:px-[100px]">
        <div class="max-w-7xl mx-auto">
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            {servicios.map((servicio) => (
              <div class="service-card group">
                <a href={servicio.url} class="block">
                  <div class="relative overflow-hidden rounded-lg mb-6">
                    <div class="aspect-[16/9] overflow-hidden">
                      <img 
                        src={servicio.imagen.src} 
                        alt={servicio.titulo}
                        class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                      />
                    </div>
                    <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent opacity-80"></div>
                    <div class="absolute bottom-0 left-0 right-0 p-6">
                      <span class="bg-[#B1293E] text-white text-xs px-3 py-1 rounded-full">VIDEO</span>
                    </div>
                  </div>
                  <div class="flex items-center text-[#B1293E] font-medium group-hover:underline">
                    <span>Conocer más</span>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                    </svg>
                  </div>
                  
                  <h2 class="text-2xl font-bold mb-4 text-green-500 group-hover:text-[#B1293E] transition-colors">{servicio.titulo}</h2>
                  
                 
                </a>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Proceso de Trabajo -->
    <section class="py-16 bg-gray-50">
      <div class="container mx-auto px-4 md:px-[100px]">
        <div class="max-w-4xl mx-auto text-center mb-12">
          <h2 class="text-3xl md:text-5xl font-serif font-normal mb-8">Nuestro Proceso</h2>
          <p class="text-lg">Trabajamos de manera metódica y colaborativa para asegurar que cada video que producimos cumpla y supere tus expectativas.</p>
        </div>
        
        <div class="relative">
          <!-- Línea de conexión -->
          <div class="absolute left-[19px] md:left-1/2 z-10 top-0 bottom-0 w-0.5 bg-[#B1293E] transform md:translate-x-[-0.5px] hidden md:block"></div>
          
          <div class="space-y-8 md:space-y-0 relative">
            <div class="flex flex-col md:flex-row-reverse items-center md:items-start">
              <div class="md:w-1/2 flex justify-center mb-4 md:mb-16">
                <div class="bg-[#B1293E] w-10 h-10 rounded-full flex items-center justify-center z-10">
                  <span class="text-white font-bold">1</span>
                </div>
              </div>
              <div class="md:w-1/2 bg-white p-6 rounded-lg shadow-sm md:text-right md:pr-12">
                <h3 class="text-xl font-bold mb-2 text-black">Briefing y Estrategia</h3>
                <p class="text-gray-700">Comenzamos entendiendo tus objetivos, audiencia y mensajes clave. Utilizamos IA para analizar tendencias y optimizar la estrategia de comunicación.</p>
              </div>
            </div>
            
            <div class="flex flex-col md:flex-row items-center md:items-start">
              <div class="md:w-1/2 flex justify-center mb-4 md:mb-16">
                <div class="bg-[#B1293E] w-10 h-10 rounded-full flex items-center justify-center z-10">
                  <span class="text-white font-bold">2</span>
                </div>
              </div>
              <div class="md:w-1/2 bg-white p-6 rounded-lg shadow-sm md:pl-12">
                <h3 class="text-xl font-bold mb-2 text-black">Guion y Storyboard</h3>
                <p class="text-gray-700">Desarrollamos un guion creativo y un storyboard detallado, aplicando técnicas de storytelling potenciadas por IA para maximizar el impacto emocional.</p>
              </div>
            </div>
            
            <div class="flex flex-col md:flex-row-reverse items-center md:items-start">
              <div class="md:w-1/2 flex justify-center mb-4 md:mb-16">
                <div class="bg-[#B1293E] w-10 h-10 rounded-full flex items-center justify-center z-10">
                  <span class="text-white font-bold">3</span>
                </div>
              </div>
              <div class="md:w-1/2 bg-white p-6 rounded-lg shadow-sm md:text-right md:pr-12">
                <h3 class="text-xl font-bold mb-2 text-black">Producción y Rodaje</h3>
                <p class="text-gray-700">Ejecutamos la filmación con equipos profesionales y técnicas innovadoras, complementando con tecnología de IA para optimizar escenas y reducir costos cuando es apropiado.</p>
              </div>
            </div>
            
            <div class="flex flex-col md:flex-row items-center md:items-start">
              <div class="md:w-1/2 flex justify-center mb-4 md:mb-16">
                <div class="bg-[#B1293E] w-10 h-10 rounded-full flex items-center justify-center z-10">
                  <span class="text-white font-bold">4</span>
                </div>
              </div>
              <div class="md:w-1/2 bg-white p-6 rounded-lg shadow-sm md:pl-12">
                <h3 class="text-xl font-bold mb-2 text-black">Postproducción y Entrega</h3>
                <p class="text-gray-700">Realizamos la edición, color, sonido y efectos visuales, utilizando IA para agilizar procesos y garantizar la calidad. Entregamos el producto final en los formatos requeridos.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Testimonios -->
    <section class="py-16 bg-white">
      <div class="container mx-auto px-4 md:px-[100px]">
        <div class="max-w-4xl mx-auto text-center mb-12">
          <h2 class="text-3xl md:text-5xl font-serif font-normal mb-8">Lo que dicen nuestros clientes</h2>
          <p class="text-lg">Descubre cómo hemos ayudado a nuestros clientes a transformar su comunicación audiovisual.</p>
        </div>
        
        <div class="max-w-4xl mx-auto">
          <div class="bg-gray-50 p-8 rounded-lg shadow-sm">
            <div class="flex justify-center mb-8">
              <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="#B1293E">
                <path d="M6.5 10c-.223 0-.437.034-.65.065.069-.232.14-.468.254-.68.114-.308.292-.575.469-.844.148-.291.409-.488.601-.737.201-.242.475-.403.692-.604.213-.21.492-.315.714-.463.232-.133.434-.28.65-.35.208-.086.39-.16.539-.222.302-.125.474-.197.474-.197L9.758 4.03c0 0-.218.052-.597.144C8.97 4.222 8.737 4.278 8.472 4.345c-.271.05-.56.187-.882.312C7.272 4.799 6.904 4.895 6.562 5.123c-.344.218-.741.4-1.091.692C5.132 6.116 4.723 6.377 4.421 6.76c-.33.358-.656.734-.909 1.162C3.219 8.33 3.02 8.778 2.81 9.221c-.19.443-.343.896-.468 1.336-.237.882-.343 1.72-.384 2.437-.034.718-.014 1.315.028 1.747.015.204.043.402.063.539.017.109.025.168.025.168l.026-.006C2.535 17.474 4.338 19 6.5 19c2.485 0 4.5-2.015 4.5-4.5S8.985 10 6.5 10zM17.5 10c-.223 0-.437.034-.65.065.069-.232.14-.468.254-.68.114-.308.292-.575.469-.844.148-.291.409-.488.601-.737.201-.242.475-.403.692-.604.213-.21.492-.315.714-.463.232-.133.434-.28.65-.35.208-.086.39-.16.539-.222.302-.125.474-.197.474-.197L20.758 4.03c0 0-.218.052-.597.144-.191.048-.424.104-.689.171-.271.05-.56.187-.882.312-.317.143-.686.238-1.028.467-.344.218-.741.4-1.091.692-.339.301-.748.562-1.05.944-.33.358-.656.734-.909 1.162C14.219 8.33 14.02 8.778 13.81 9.221c-.19.443-.343.896-.468 1.336-.237.882-.343 1.72-.384 2.437-.034.718-.014 1.315.028 1.747.015.204.043.402.063.539.017.109.025.168.025.168l.026-.006C13.535 17.474 15.338 19 17.5 19c2.485 0 4.5-2.015 4.5-4.5S19.985 10 17.5 10z"/>
              </svg>
            </div>
            <p class="text-xl mb-6 text-center text-black italic">"Render es una empresa que por años me ha proveído de piezas de comunicación altamente efectivas, que han generado alto impacto en las audiencias para las que estaban destinadas, convirtiéndose en palancas eficientes para lograr los objetivos de nuestras marcas."</p>
            <div class="text-center">
              <p class="font-bold text-black">Alianza Team</p>
              <p class="text-gray-600">Mercadeo</p>
            </div>
          </div>
        </div>
        
        <!-- Portafolio Link -->
        <div class="text-center mt-12">
          <a href="/#portafolio" class="inline-block px-8 py-3 border-2 border-black rounded-full text-black hover:bg-black hover:text-white transition-colors duration-300">
            Ver Portafolio Completo
          </a>
        </div>
      </div>
    </section>

    <!-- CTA -->
    <section class="py-20 bg-black text-white">
      <div class="container mx-auto px-4 md:px-[100px]">
        <div class="max-w-4xl mx-auto text-center">
          <h2 class="text-3xl md:text-5xl font-serif font-normal mb-6">¿Listo para transformar tu comunicación?</h2>
          <p class="text-xl mb-8">Contáctanos hoy mismo y descubre cómo podemos ayudarte a crear videos que conecten emocionalmente con tu audiencia y generen resultados para tu negocio.</p>
          <a href="/contacto" class="inline-block px-8 py-3 rounded-full bg-white text-black hover:bg-gray-200 transition-colors duration-300">
            Contáctanos
          </a>
        </div>
      </div>
    </section>
  </div>
</Layout>

<style>
  #underline {
    transform-origin: left;
  }
  
  .service-card {
    transition: all 0.3s ease;
  }
  
  .service-card:hover {
    transform: translateY(-5px);
  }
  
  /* Limitar descripciones a 3 líneas con elipsis */
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;  
    overflow: hidden;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    if (typeof gsap !== 'undefined' && typeof ScrollTrigger !== 'undefined') {
      gsap.registerPlugin(ScrollTrigger);
      
      gsap.fromTo('#underline', 
        { scaleX: 0 },
        {
          scaleX: 1,
          duration: 1,
          ease: 'power3.out',
          scrollTrigger: {
            trigger: '#underline',
            start: 'top bottom-=100',
            toggleActions: 'play none none reset'
          }
        }
      );
    }
  });
</script>